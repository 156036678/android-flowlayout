<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.lankton.lanflowlayout.MainActivity">

    <cn.lankton.flowlayout.FlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212343">
        <View
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
        <View
            android:layout_width="49dp"
            android:layout_height="23dp"
            android:layout_margin="10dp"
            android:background="#777777"/>
    </cn.lankton.flowlayout.FlowLayout>

    <Button
        android:id="@+id/btn_all_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="all visible"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btn_add_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_all_visible"
        android:textAllCaps="false"
        android:text="add random"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btn_remove_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_add_random"
        android:textAllCaps="false"
        android:text="remove all"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_remove_all"
        android:textAllCaps="false"
        android:text="sort"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
